name: Guacamole-Host

on: [workflow_dispatch]

jobs:
  guac:
    runs-on: ubuntu-latest

    steps:
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'

    - run: pip install -r requirements.txt

    - name: Fetch RDP Address from Firebase
      id: fetch
      run: |
        RDP_ADDR=$(python firebase/fetch_rdp_address.py https://your-project.firebaseio.com)
        echo "RDP_ADDR=$RDP_ADDR" >> $GITHUB_ENV

    - name: Start Apache Guacamole
      run: |
        docker run -d --name guac --restart always -p 8080:8080 -e GUAC_USER=guac -e GUAC_PASS=guac oznu/guacamole
        sleep 10

    - name: Tunnel Guacamole via Serveo
      run: |
        ssh -o StrictHostKeyChecking=no -R 80:localhost:8080 serveo.net -N &
        echo "Access RDP in browser: http://yourname.serveo.net/#/?username=guac&password=guac"
